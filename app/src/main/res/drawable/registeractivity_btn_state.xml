<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false"
        android:state_focused="false"
        >
          <shape
              android:shape="rectangle">
                 <gradient
                     android:startColor="#f04800"
                     android:endColor="#f04800"
                     android:angle="90"
                    >
                 </gradient>
                 <corners
                     android:radius="2dp">
                 </corners>
          </shape>
     </item>
     <item
         android:state_focused="false"
         android:state_pressed="true">
           <shape
               android:shape="rectangle">
                <corners
                    android:radius="2dp">
                </corners>
               <gradient
                   android:angle="90"
                   android:startColor="#d44508"
                   android:endColor="#d44508">
               </gradient>
           </shape>
     </item>
</selector>