<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/loginactivity_background"
    android:id="@+id/realtivelayout">

    <ImageView
        android:layout_marginTop="45dp"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/imv_loginactivity_logo"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtext_loginactivity_username"
            android:hint="账号"
            android:textColorHint="#a0a0a0"
            android:textColor="#000000"
            android:background="@drawable/loginactivity_edittext_top"
            android:layout_below="@+id/imv_loginactivity_logo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="27dp" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:hint="密码"
            android:textColorHint="#a0a0a0"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:id="@+id/edtext_loginactivity_password"
            android:background="@drawable/loginactivity_edittext_bottom"
            android:layout_below="@+id/edtext_loginactivity_username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            />


    <Button
        android:id="@+id/btn_loginactivity_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:textColor="#ffffff"
        android:background="@drawable/loginactivity_button"
        android:layout_below="@+id/edtext_loginactivity_password"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txt_loginactivity_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册新账号"
        android:textColor="#46c4b9"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
