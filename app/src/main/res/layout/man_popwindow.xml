<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#f7f9fb">
    <Button
        android:id="@+id/btn_menu_logout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="注销"
        android:textColor="@color/blue_define"
        android:background="@drawable/man_popwindow_btn_state"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btn_menu_exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="退出"
        android:textColor="@color/blue_define"
        android:background="@drawable/man_popwindow_btn_state"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btn_menu_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="取消"
        android:textColor="@color/blue_define"
        android:background="@drawable/man_popwindow_btn_state"
        android:textSize="20sp"/>

</LinearLayout>