<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f7f9fb"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:background="@drawable/managerlayout_drawable"
    android:id="@+id/manageractivity_layout"
     >
    <LinearLayout
        android:id="@+id/manageractivity_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/manageractivity_imv1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/manregactivity_imv_portrait1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/manageractivity_layout2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/manageractivity_txt2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:text="我的母亲"
            android:textColor="#000000"
            android:textSize="23sp"/>
        <TextView
            android:id="@+id/manageractivity_txt2_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南京路256号"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:textColor="#555555"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/manageractivity_layout3"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/manageractivity_txt3_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="  1-16 14:28"
            android:textColor="#000000"/>
       <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:id="@+id/manageractivity_layout3_1">
       <Button
           android:id="@+id/manageractivity_btn_phone"
           android:layout_width="55dp"
           android:layout_height="55dp"
           android:layout_marginBottom="5dp"
           android:background="@drawable/manregactivity_imgbtn_phone"
           />
       <Button
           android:id="@+id/manageractivity_btn_position"
           android:layout_width="55dp"
           android:layout_height="55dp"
           android:layout_marginBottom="5dp"
           android:background="@drawable/manregactivity_imgbtn_position"
           />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</LinearLayout>